DEBUG=0
SECRET_KEY=change_me_with_secure_key_in_production
# Укажите все домены, по которым будет доступен сайт, через пробел
DJANGO_ALLOWED_HOSTS=localhost 127.0.0.1 [::1] yourdomain.com www.yourdomain.com

# CSRF настройки
# Укажите все домены, с которых разрешены запросы, включая протокол (http/https)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com http://yourdomain.com https://www.yourdomain.com http://www.yourdomain.com
# Используйте 1 для включения, 0 для отключения
CSRF_COOKIE_SECURE=1
CSRF_USE_SESSIONS=0
CSRF_COOKIE_HTTPONLY=0
# Допустимые значения: None, Lax, Strict или пустое для значения по умолчанию
CSRF_COOKIE_SAMESITE=None

# База данных
DB_ENGINE=django.db.backends.postgresql
DB_NAME=restaurant_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# Настройки для ForteBank
FORTEBANK_API_URL=https://api.fortebank.kz
FORTEBANK_MERCHANT_ID=your_merchant_id
FORTEBANK_SECRET_KEY=your_secret_key

# Настройки для R-Keeper
RKEEPER_API_URL=http://your-rkeeper-server/api
RKEEPER_USERNAME=your_username
RKEEPER_PASSWORD=your_password

# Настройки сайта
SITE_NAME=Ресторан
# Укажите основной домен, по которому будет доступен сайт
SITE_URL=http://yourdomain.com
CURRENCY=KZT
CURRENCY_SYMBOL=₸

# Настройки для столов
MIN_TABLE_NUMBER=1
MAX_TABLE_NUMBER=100 